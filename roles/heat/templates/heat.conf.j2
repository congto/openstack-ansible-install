[DEFAULT]
rpc_backend = rabbit
auth_strategy = keystone
heat_metadata_server_url = http://{{ controller_address }}:8000
heat_waitcondition_server_url = http://{{ controller_address }}:8000/v1/waitcondition

stack_domain_admin = {{ heat_domain_admin_username }}
stack_domain_admin_password = {{ heat_domain_admin_password }}
stack_user_domain_name = {{ heat_domain_name }}

[database]
connection = mysql+pymysql://{{ heat_db_user }}:{{ heat_db_password }}@{{ controller_address }}/{{ heat_db_name }}

[oslo_messaging_rabbit]
rabbit_host = {{ controller_address }}
rabbit_userid = {{ rabbitmq_userid }}
rabbit_password = {{ rabbitmq_password }}

[keystone_authtoken]
auth_uri = http://{{ controller_address}}:5000
auth_url = http://{{ controller_address}}:35357
memcached_servers = {{ controller_address}}:11211
auth_type = password
project_domain_name = {{ user_domain_name }}
user_domain_name = {{ user_domain_name}}
project_name = {{ nova_service_project }}
username = {{ heat_service_user }}
password = {{ heat_service_password }}

[trustee]
auth_plugin = password
auth_url = http://{{ controller_address}}:35357
username = {{ heat_service_user }}
password = {{ heat_service_password }}
user_domain_name = default

[clients_keystone]
auth_uri = http://{{ controller_address}}:35357

[ec2authtoken]
auth_uri = http://{{ controller_address}}:5000
